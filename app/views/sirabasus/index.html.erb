<h1>
  シラバス作成ページ
</h1>

<h2>作成したシラバス</h2>

<table>
  <thead>
    <tr>
      <th>章番号</th>
      <th>名前</th>
      <th>内容</th>
    </tr>
  </thead>
  <tbody>
    <% @sirabasus.each do |sirabasu| %>
      <tr>
        <td><%= sirabasu.number%></td>
        <td><%= sirabasu.name %></td>
        <td><%= sirabasu.content %></td>
        <td><%= link_to "編集", edit_sirabasu_path(sirabasu) %></td>
        <td><%= link_to "削除", sirabasu_path(sirabasu), :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新しいシラバスの作成', new_sirabasu_path %>

<p>
  <%= link_to 'チェックリスト作成ページへ', '/kanri/check_make' %>
</p>

<p>
  <%= link_to '管理トップへ', '/kanri/kanri_top' %>
</p>
